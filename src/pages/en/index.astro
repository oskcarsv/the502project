---
import Layout from '../../layouts/Layout.astro';

const links = {
  discord: 'https://discord.gg/AZeuYhCu',
  whatsapp: 'https://chat.whatsapp.com/JNvMJwm9Y0aDOBEQj3sFkM'
};
---

<Layout
  title="the502project"
  description="builders building from guatemala"
  lang="en"
>
  <div class="min-h-screen grid-bg">
    <!-- Side Index Navigation (desktop) -->
    <nav class="hidden lg:flex fixed left-8 top-1/2 -translate-y-1/2 flex-col gap-4 z-50">
      <a href="#home" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">home</span>
      </a>
      <a href="#what" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">what</span>
      </a>
      <a href="#initiatives" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">do</span>
      </a>
      <a href="#join" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">join</span>
      </a>
    </nav>

    <!-- Top bar (mobile nav + lang switch) -->
    <div class="fixed top-0 left-0 right-0 z-50 px-6 py-4 flex items-center justify-end">
      <div class="flex items-center gap-4 text-xs text-gray-500">
        <a href="/en/events" class="hover:text-white lg:hidden">events</a>
        <a href="/en/initiatives" class="hover:text-white lg:hidden">initiatives</a>
        <a href="/" class="hover:text-502-green border-l border-white/10 pl-4">es</a>
      </div>
    </div>

    <!-- Main content -->
    <main class="max-w-3xl mx-auto px-6 lg:px-0 lg:ml-44 xl:ml-56">

      <!-- Hero Section -->
      <section id="home" class="min-h-screen flex flex-col justify-center py-20">
        <div class="flex items-center gap-3 mb-8">
          <svg class="w-8 h-8 text-502-green" viewBox="0 0 100 100" fill="currentColor">
            <rect x="10" y="10" width="35" height="35" rx="2"/>
            <path d="M55 10 Q90 10 90 45 L55 45 Z"/>
            <path d="M10 55 Q10 90 45 90 L45 55 Z"/>
            <path d="M55 55 Q90 55 90 90 L55 90 Z"/>
          </svg>
          <span class="text-gray-400 text-sm">the502project</span>
        </div>

        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-[1.1] mb-10">
          a community for<br/>
          those who <span class="italic">build</span><br/>
          things
        </h1>

        <p class="text-gray-400 text-lg max-w-lg mb-12">
          tech, companies, projects, whatever.<br/>
          from guatemala, to wherever you want to go.
        </p>

        <div class="flex flex-wrap gap-3">
          <a
            href={links.whatsapp}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-502-green text-502-black text-sm font-bold hover:bg-white transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            whatsapp
          </a>
          <a
            href={links.discord}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/20 text-sm hover:border-502-green hover:text-502-green transition-colors"
          >
            discord
          </a>
        </div>
      </section>

      <!-- What is this -->
      <section id="what" class="fade-in min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">WHAT IS THIS</span>

        <h2 class="text-4xl sm:text-5xl mb-8">
          for those who <span class="italic">build</span><br/>
          things
        </h2>

        <div class="space-y-6 text-gray-400 text-lg">
          <p>
            502 is guatemala's country code. the502project is for those
            who are building something from here, or want to start.
          </p>
          <p>
            doesn't matter if it's tech, a company, a side project, or
            something completely different. we gather to share, do real
            networking, and support each other. no corporate bullshit.
          </p>
          <p class="text-white text-xl">
            if you build, you're one of us.
          </p>
        </div>
      </section>

      <!-- Initiatives -->
      <section id="initiatives" class="fade-in min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">WHAT WE DO</span>

        <div class="space-y-6">
          <a href="/en/events" class="stagger-item block group py-4 border-b border-white/10 hover:border-502-green transition-colors">
            <div class="flex justify-between items-baseline">
              <span class="text-3xl group-hover:text-502-green transition-colors">events</span>
              <span class="text-xs text-gray-500">action, not talks</span>
            </div>
          </a>

          <div class="stagger-item py-4 border-b border-white/10 opacity-40">
            <div class="flex justify-between items-baseline">
              <span class="text-3xl">goals club</span>
              <span class="text-xs text-gray-500">soon</span>
            </div>
          </div>

          <div class="stagger-item py-4 border-b border-white/10 opacity-40">
            <div class="flex justify-between items-baseline">
              <span class="text-3xl">open source</span>
              <span class="text-xs text-gray-500">soon</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Join -->
      <section id="join" class="fade-in min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">JOIN</span>

        <h2 class="text-4xl sm:text-5xl mb-8">
          the community lives on<br/>
          <span class="italic">whatsapp</span> and <span class="italic">discord</span>
        </h2>

        <p class="text-gray-400 text-lg mb-10">
          join whenever, participate however you want.
        </p>

        <div class="flex flex-wrap gap-3 mb-8">
          <a
            href={links.whatsapp}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-502-green text-502-black text-sm font-bold hover:bg-white transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            join whatsapp
          </a>
          <a
            href={links.discord}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/20 text-sm hover:border-502-green hover:text-502-green transition-colors"
          >
            discord
          </a>
        </div>

        <p class="text-gray-500 text-sm">
          also on
          <a href="https://www.linkedin.com/company/the502project/" target="_blank" rel="noopener noreferrer" class="hover:text-502-green transition-colors">linkedin</a>,
          <a href="https://www.instagram.com/_the502project/" target="_blank" rel="noopener noreferrer" class="hover:text-502-green transition-colors">instagram</a>,
          <a href="https://x.com/the502project" target="_blank" rel="noopener noreferrer" class="hover:text-502-green transition-colors">x</a> &
          <a href="https://www.youtube.com/@the-502-project" target="_blank" rel="noopener noreferrer" class="hover:text-502-green transition-colors">youtube</a>
        </p>
      </section>

      <!-- Footer -->
      <footer class="py-16 border-t border-white/5">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-502-green" viewBox="0 0 100 100" fill="currentColor">
              <rect x="10" y="10" width="35" height="35" rx="2"/>
              <path d="M55 10 Q90 10 90 45 L55 45 Z"/>
              <path d="M10 55 Q10 90 45 90 L45 55 Z"/>
              <path d="M55 55 Q90 55 90 90 L55 90 Z"/>
            </svg>
            <span class="text-xs text-gray-500">the502project</span>
          </div>

          <div class="flex flex-wrap gap-4 text-xs text-gray-500">
            <a href="/en/code" class="hover:text-502-green">code of conduct</a>
            <a href="mailto:hello@the502project.com" class="hover:text-502-green">contact</a>
          </div>
        </div>
      </footer>

    </main>
  </div>

  <script>
    const sections = document.querySelectorAll('section[id]');
    const navItems = document.querySelectorAll('.nav-item');

    window.addEventListener('scroll', () => {
      let current = '';
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        if (scrollY >= sectionTop - 300) {
          current = section.getAttribute('id') || '';
        }
      });

      navItems.forEach(item => {
        item.classList.remove('active');
        if (item.getAttribute('href') === `#${current}`) {
          item.classList.add('active');
        }
      });
    });
  </script>
</Layout>
