---
import Layout from '../../layouts/Layout.astro';

const links = {
  discord: 'https://discord.gg/AZeuYhCu',
  whatsapp: 'https://chat.whatsapp.com/JNvMJwm9Y0aDOBEQj3sFkM'
};
---

<Layout
  title="Code of Conduct | the502project"
  description="simple rules for a healthy community"
  lang="en"
>
  <div class="min-h-screen grid-bg">
    <!-- Side Index Navigation (desktop) -->
    <nav class="hidden lg:flex fixed left-8 top-1/2 -translate-y-1/2 flex-col gap-4 z-50">
      <a href="/en" class="group flex items-center gap-3">
        <span class="relative w-2 h-2 flex items-center justify-center">
          <span class="absolute w-1.5 h-1.5 rounded-full bg-gray-600 group-hover:opacity-0 transition-opacity"></span>
          <svg class="absolute w-3 h-3 text-502-green opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        </span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">back</span>
      </a>
      <a href="#rules" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">rules</span>
      </a>
      <a href="#not-accepted" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">not accepted</span>
      </a>
      <a href="#report" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">report</span>
      </a>
    </nav>

    <!-- Top bar -->
    <div class="fixed top-0 left-0 right-0 z-50 px-6 py-4 flex items-center justify-end">
      <div class="flex items-center gap-4 text-xs text-gray-500">
        <a href="/en" class="hover:text-white">home</a>
        <a href="/en/events" class="hover:text-white">events</a>
        <a href="/en/blog" class="hover:text-white">blog</a>
        <a href="/code" class="hover:text-502-green border-l border-white/10 pl-4">es</a>
      </div>
    </div>

    <!-- Main content -->
    <main class="max-w-3xl mx-auto px-6 lg:px-0 lg:ml-44 xl:ml-56">

      <!-- Rules Section -->
      <section id="rules" class="min-h-screen flex flex-col justify-center py-20">
        <span class="text-502-green text-xs tracking-wider mb-8 block">CODE OF CONDUCT</span>

        <h1 class="text-4xl sm:text-5xl md:text-6xl mb-6">
          the <span class="italic">rules</span>
        </h1>

        <!-- TL;DR -->
        <div class="border border-white/10 p-6 mb-12">
          <p class="text-lg">
            <span class="text-502-green">be the person who adds, not the one who subtracts.</span>
            at the502project we're building a space together where everyone feels safe,
            respected, and motivated to create. treat others as you'd like to be treated:
            with respect, empathy, and professionalism.
          </p>
        </div>

        <div class="space-y-8">
          <div>
            <h2 class="text-2xl mb-4">everyone is <span class="italic">welcome</span> here</h2>
            <p class="text-gray-400">
              at the502project we believe diversity makes us stronger. regardless of your gender,
              race, sexual orientation, abilities, physical appearance, or beliefs. this is your space
              to learn, create, and grow.
            </p>
          </div>

          <div>
            <h2 class="text-2xl mb-4">we treat each other with <span class="italic">respect</span></h2>
            <p class="text-gray-400">
              whether at in-person events, on whatsapp, or any other community channel,
              we seek an environment of constructive collaboration. differences of opinion are
              welcome, but we always express them with professionalism.
            </p>
          </div>

          <div>
            <h2 class="text-2xl mb-4"><span class="text-502-green">zero tolerance</span> for exclusionary behavior</h2>
            <p class="text-gray-400">
              we don't accept any form of discrimination, harassment, intimidation, or conduct
              that makes someone feel unsafe or unwelcome.
            </p>
          </div>
        </div>
      </section>

      <!-- Not Accepted Section -->
      <section id="not-accepted" class="min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">NOT ACCEPTED</span>

        <h2 class="text-4xl sm:text-5xl mb-12">
          behaviors we <span class="italic">don't</span> tolerate
        </h2>

        <div class="space-y-8">
          <div>
            <h3 class="text-xl text-white mb-3">offensive language and content</h3>
            <ul class="text-gray-400 space-y-2">
              <li>• discriminatory comments of any kind</li>
              <li>• explicit sexual language or inappropriate content</li>
              <li>• violent content, threats, or intimidating language</li>
              <li>• personal insults or targeted attacks</li>
            </ul>
          </div>

          <div>
            <h3 class="text-xl text-white mb-3">harassment and intimidation</h3>
            <ul class="text-gray-400 space-y-2">
              <li>• harassment of any kind, whether in person or online</li>
              <li>• unwanted sexual attention or inappropriate advances</li>
              <li>• deliberate intimidation, stalking, or following</li>
              <li>• photography or recording without consent</li>
            </ul>
          </div>

          <div>
            <h3 class="text-xl text-white mb-3">improper use of channels</h3>
            <ul class="text-gray-400 space-y-2">
              <li>• spam or repetitive posts without value</li>
              <li>• unsolicited advertising or sales</li>
              <li>• sharing others' private information</li>
              <li>• trolling or deliberate provocation</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Report Section -->
      <section id="report" class="min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">REPORT</span>

        <h2 class="text-4xl sm:text-5xl mb-8">
          were you a victim or <span class="italic">witness</span>?
        </h2>

        <p class="text-gray-400 text-lg mb-10 max-w-lg">
          your safety and well-being are our priority. if you experience or see any
          behavior that violates this code of conduct, contact the502project
          representatives immediately. your report will be treated with confidentiality.
        </p>

        <div class="flex flex-wrap gap-3">
          <a
            href={links.whatsapp}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-502-green text-502-black text-sm font-bold hover:bg-white transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            report via whatsapp
          </a>
          <a
            href="mailto:hello@the502project.com"
            class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/20 text-sm hover:border-502-green hover:text-502-green transition-colors"
          >
            email
          </a>
        </div>
      </section>

      <!-- Footer -->
      <footer class="py-16 border-t border-white/5">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-502-green" viewBox="0 0 100 100" fill="currentColor">
              <rect x="10" y="10" width="35" height="35" rx="2"/>
              <path d="M55 10 Q90 10 90 45 L55 45 Z"/>
              <path d="M10 55 Q10 90 45 90 L45 55 Z"/>
              <path d="M55 55 Q90 55 90 90 L55 90 Z"/>
            </svg>
            <span class="text-xs text-gray-500">the502project</span>
          </div>

          <div class="flex flex-wrap gap-4 text-xs text-gray-500">
            <a href="/en" class="hover:text-502-green">home</a>
            <a href="mailto:hello@the502project.com" class="hover:text-502-green">contact</a>
          </div>
        </div>
      </footer>

    </main>
  </div>

  <script>
    const sections = document.querySelectorAll('section[id]');
    const navItems = document.querySelectorAll('.nav-item');

    window.addEventListener('scroll', () => {
      let current = '';
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        if (scrollY >= sectionTop - 300) {
          current = section.getAttribute('id') || '';
        }
      });

      navItems.forEach(item => {
        item.classList.remove('active');
        if (item.getAttribute('href') === `#${current}`) {
          item.classList.add('active');
        }
      });
    });
  </script>
</Layout>
