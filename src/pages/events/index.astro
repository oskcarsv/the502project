---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const links = {
  discord: 'https://discord.gg/AZeuYhCu',
  whatsapp: 'https://chat.whatsapp.com/JNvMJwm9Y0aDOBEQj3sFkM'
};

const allEvents = await getCollection('events');
const today = new Date().toISOString().split('T')[0];

const upcomingEvents = allEvents
  .filter(event => event.data.date >= today && event.data.status !== 'past')
  .sort((a, b) => a.data.date.localeCompare(b.data.date));

const pastEvents = allEvents
  .filter(event => event.data.date < today || event.data.status === 'past')
  .sort((a, b) => b.data.date.localeCompare(a.data.date));

const featuredEvent = upcomingEvents.find(e => e.data.featured) || upcomingEvents[0];
const otherUpcoming = upcomingEvents.filter(e => e.slug !== featuredEvent?.slug);

const formatDate = (date: string) => {
  const d = new Date(date);
  return d.toLocaleDateString('es-GT', { day: 'numeric', month: 'short' });
};

const formatFullDate = (date: string) => {
  const d = new Date(date);
  return d.toLocaleDateString('es-GT', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
};

const getStatusBadge = (status: string) => {
  const badges: Record<string, { text: string; class: string }> = {
    'open': { text: 'registro abierto', class: 'bg-502-green/20 text-502-green' },
    'waitlist': { text: 'lista de espera', class: 'bg-yellow-500/20 text-yellow-400' },
    'sold-out': { text: 'agotado', class: 'bg-red-500/20 text-red-400' },
    'requires-application': { text: 'requiere aplicación', class: 'bg-purple-500/20 text-purple-400' },
    'past': { text: 'finalizado', class: 'bg-gray-500/20 text-gray-400' }
  };
  return badges[status] || badges['open'];
};

const getTypeBadge = (type: string) => {
  const types: Record<string, { text: string; class: string }> = {
    'presencial': { text: 'presencial', class: 'text-502-green' },
    'virtual': { text: 'virtual', class: 'text-purple-400' },
    'hybrid': { text: 'híbrido', class: 'text-blue-400' }
  };
  return types[type] || types['presencial'];
};
---

<Layout
  title="Eventos | the502project"
  description="cartelera de eventos de la comunidad 502"
  lang="es"
>
  <div class="min-h-screen grid-bg">
    <!-- Side Index Navigation (desktop) -->
    <nav class="hidden lg:flex fixed left-8 top-1/2 -translate-y-1/2 flex-col gap-4 z-50">
      <a href="/" class="group flex items-center gap-3">
        <span class="relative w-2 h-2 flex items-center justify-center">
          <span class="absolute w-1.5 h-1.5 rounded-full bg-gray-600 group-hover:opacity-0 transition-opacity"></span>
          <svg class="absolute w-3 h-3 text-502-green opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        </span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">regresar</span>
      </a>
      <a href="#proximos" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">próximos</span>
      </a>
      <a href="#pasados" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">pasados</span>
      </a>
      <a href="#proponer" class="nav-item group flex items-center gap-3">
        <span class="nav-indicator"></span>
        <span class="text-xs text-gray-500 group-hover:text-502-green transition-colors">proponer</span>
      </a>
    </nav>

    <!-- Top bar -->
    <div class="fixed top-0 left-0 right-0 z-50 px-6 py-4 flex items-center justify-end">
      <div class="flex items-center gap-4 text-xs text-gray-500">
        <a href="/" class="hover:text-white lg:hidden">inicio</a>
        <a href="/initiatives" class="hover:text-white lg:hidden">iniciativas</a>
        <a href="/en/events" class="hover:text-502-green border-l border-white/10 pl-4">en</a>
      </div>
    </div>

    <!-- Main content -->
    <main class="max-w-3xl mx-auto px-6 lg:px-0 lg:ml-32 xl:ml-48">

      <!-- Upcoming Events Section -->
      <section id="proximos" class="min-h-screen flex flex-col justify-center py-20">
        <span class="text-502-green text-xs tracking-wider mb-8 block">EVENTOS</span>

        <h1 class="text-4xl sm:text-5xl md:text-6xl mb-6">
          donde <span class="italic">pasan</span> cosas
        </h1>
        <p class="text-gray-400 text-lg max-w-lg mb-12">
          founders y cracks del ecosistema compartiendo lo que funciona.
          acción, no charlas motivacionales.
        </p>

        <!-- Featured Event -->
        {featuredEvent && (
          <div class="fade-in mb-12">
            <p class="text-gray-500 text-sm mb-4">próximo evento</p>
            <a
              href={featuredEvent.data.lumaUrl || featuredEvent.data.customRegistrationUrl || '#'}
              target={featuredEvent.data.lumaUrl || featuredEvent.data.customRegistrationUrl ? '_blank' : undefined}
              rel={featuredEvent.data.lumaUrl || featuredEvent.data.customRegistrationUrl ? 'noopener noreferrer' : undefined}
              class="block group"
            >
              <div class="border border-white/10 hover:border-502-green/50 transition-colors p-6 md:p-8">
                <div class="flex flex-wrap items-center gap-3 mb-4">
                  <span class={`text-xs px-2 py-1 rounded ${getStatusBadge(featuredEvent.data.status).class}`}>
                    {getStatusBadge(featuredEvent.data.status).text}
                  </span>
                  <span class={`text-xs ${getTypeBadge(featuredEvent.data.type).class}`}>
                    {getTypeBadge(featuredEvent.data.type).text}
                  </span>
                  {featuredEvent.data.collaboration && (
                    <span class="text-xs text-gray-500">
                      · con {featuredEvent.data.collaboratorName}
                    </span>
                  )}
                </div>

                <h2 class="text-2xl md:text-3xl lg:text-4xl mb-4 group-hover:text-502-green transition-colors">
                  {featuredEvent.data.titleEs || featuredEvent.data.title}
                </h2>

                <p class="text-gray-400 mb-6">
                  {featuredEvent.data.descriptionEs || featuredEvent.data.description}
                </p>

                <div class="flex flex-wrap items-center gap-6 text-sm">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="text-gray-300">{formatFullDate(featuredEvent.data.date)}</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-gray-300">{featuredEvent.data.time}{featuredEvent.data.endTime && ` - ${featuredEvent.data.endTime}`}</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-gray-300">{featuredEvent.data.locationEs || featuredEvent.data.location}</span>
                  </div>
                </div>

                {(featuredEvent.data.lumaUrl || featuredEvent.data.customRegistrationUrl) && featuredEvent.data.status !== 'sold-out' && (
                  <div class="mt-6 pt-6 border-t border-white/10">
                    <span class="inline-flex items-center gap-2 text-502-green group-hover:underline">
                      registrarme
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                )}
              </div>
            </a>
          </div>
        )}

        <!-- Other Upcoming Events -->
        {otherUpcoming.length > 0 && (
          <div class="fade-in">
            <p class="text-gray-500 text-sm mb-6">más eventos</p>
            <div class="space-y-0">
              {otherUpcoming.map((event) => (
                <a
                  href={event.data.lumaUrl || event.data.customRegistrationUrl || '#'}
                  target={event.data.lumaUrl || event.data.customRegistrationUrl ? '_blank' : undefined}
                  rel={event.data.lumaUrl || event.data.customRegistrationUrl ? 'noopener noreferrer' : undefined}
                  class="stagger-item group border-b border-white/10 py-6 first:pt-0 block"
                >
                  <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                    <div class="flex-1">
                      <div class="flex flex-wrap items-center gap-2 mb-2">
                        <span class={`text-xs ${getTypeBadge(event.data.type).class}`}>
                          {getTypeBadge(event.data.type).text}
                        </span>
                        <span class={`text-xs px-2 py-0.5 rounded ${getStatusBadge(event.data.status).class}`}>
                          {getStatusBadge(event.data.status).text}
                        </span>
                      </div>
                      <h3 class="text-xl md:text-2xl group-hover:text-502-green transition-colors mb-2">
                        {event.data.titleEs || event.data.title}
                      </h3>
                      <p class="text-gray-400 text-sm">
                        {event.data.descriptionEs || event.data.description}
                      </p>
                    </div>
                    <div class="flex flex-col items-start md:items-end gap-1 text-sm text-gray-500 md:min-w-[140px]">
                      <span>{formatDate(event.data.date)}</span>
                      <span>{event.data.time}</span>
                      <span class="text-gray-600">{event.data.locationEs || event.data.location}</span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        {upcomingEvents.length === 0 && (
          <div class="fade-in border border-white/10 p-8 text-center">
            <p class="text-gray-400 mb-4">no hay eventos programados por ahora</p>
            <a href="#proponer" class="text-502-green hover:underline">propón uno</a>
          </div>
        )}
      </section>

      <!-- Past Events Section -->
      {pastEvents.length > 0 && (
        <section id="pasados" class="fade-in py-24 border-t border-white/5">
          <span class="text-502-green text-xs tracking-wider mb-8 block">ARCHIVO</span>

          <h2 class="text-3xl sm:text-4xl mb-8">
            eventos <span class="italic">pasados</span>
          </h2>

          <div class="space-y-0">
            {pastEvents.map((event) => (
              <div class="stagger-item border-b border-white/10 py-5 first:pt-0 opacity-60 hover:opacity-100 transition-opacity">
                <div class="flex flex-col md:flex-row md:items-baseline justify-between gap-2">
                  <div>
                    <div class="flex items-center gap-2 mb-1">
                      <h3 class="text-lg md:text-xl">
                        {event.data.titleEs || event.data.title}
                      </h3>
                      {event.data.collaboration && (
                        <span class="text-xs text-gray-600">
                          con {event.data.collaboratorName}
                        </span>
                      )}
                    </div>
                    <p class="text-gray-500 text-sm">
                      {event.data.descriptionEs || event.data.description}
                    </p>
                  </div>
                  <div class="flex items-center gap-4 text-sm text-gray-600 md:min-w-[100px] md:justify-end">
                    <span>{formatDate(event.data.date)}</span>
                    <span class={getTypeBadge(event.data.type).class}>
                      {getTypeBadge(event.data.type).text}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Propose Section -->
      <section id="proponer" class="fade-in min-h-screen flex flex-col justify-center py-24 border-t border-white/5">
        <span class="text-502-green text-xs tracking-wider mb-8 block">PROPONER</span>

        <h2 class="text-4xl sm:text-5xl mb-8">
          <span class="italic">propón</span> algo
        </h2>

        <p class="text-gray-400 text-lg mb-10 max-w-lg">
          ¿tienes una idea para un evento? workshops, charlas, lo que sea.
          esta comunidad es tuya.
        </p>

        <a
          href={links.discord}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-502-green hover:underline"
        >
          proponer en discord
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </section>

      <!-- Footer -->
      <footer class="py-16 border-t border-white/5">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-502-green" viewBox="0 0 100 100" fill="currentColor">
              <rect x="10" y="10" width="35" height="35" rx="2"/>
              <path d="M55 10 Q90 10 90 45 L55 45 Z"/>
              <path d="M10 55 Q10 90 45 90 L45 55 Z"/>
              <path d="M55 55 Q90 55 90 90 L55 90 Z"/>
            </svg>
            <span class="text-xs text-gray-500">the502project</span>
          </div>

          <div class="flex flex-wrap gap-4 text-xs text-gray-500">
            <a href="/code" class="hover:text-502-green">código de conducta</a>
            <a href="mailto:hello@the502project.com" class="hover:text-502-green">contacto</a>
          </div>
        </div>
      </footer>

    </main>
  </div>

  <script>
    const sections = document.querySelectorAll('section[id]');
    const navItems = document.querySelectorAll('.nav-item');

    window.addEventListener('scroll', () => {
      let current = '';
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        if (scrollY >= sectionTop - 300) {
          current = section.getAttribute('id') || '';
        }
      });

      navItems.forEach(item => {
        item.classList.remove('active');
        if (item.getAttribute('href') === `#${current}`) {
          item.classList.add('active');
        }
      });
    });
  </script>
</Layout>
